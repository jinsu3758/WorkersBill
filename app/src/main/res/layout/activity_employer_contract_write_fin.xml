<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="employerContractWriteFin"
            type="com.example.jinsu.work2.viewmodel.EmployerViewModel"/>
    </data>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/white">
                <Button
                    android:id="@+id/employer_contract_write_fin_btn_back"
                    android:onClick="@{employerContractWriteFin::onBtnClick}"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="left|center"
                    android:background="@drawable/backicon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="계약서 작성하기"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="25dp"
                    android:layout_gravity="end|center"
                    android:background="@drawable/homeicon"
                    android:id="@+id/employer_contract_write_fin_btn_home"
                    android:onClick="@{employerContractWriteFin::onBtnClick}"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="32dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:text="1. 계약서 작성"
                        android:textSize="11sp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="32dp"
                        android:background="@drawable/round_corner_green"/>

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="62.5dp"
                        android:text="2. 작성 완료"
                        android:textColor="@color/background"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:background="@drawable/round_corner_green_fill"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="45dp"
                    android:layout_gravity="center"
                    android:text="근로자 근로계약서"
                    android:textSize="17sp"
                    android:textColor="@color/maintext" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/maintext"
                            android:text="육회한"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/employer_write_contract_4_name_er"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/maintext"
                            android:text="연어어어"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/employer_write_contract_4_name_ee"/>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 근로계약 기간"
                    android:textSize="15sp"
                    android:textColor="@color/maintext"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20162626"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. 근무장소"
                    android:textSize="15sp"
                    android:textColor="@color/maintext"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="워커스빌"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. 업무의 내용"
                    android:textSize="15sp"
                    android:textColor="@color/maintext"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="코딩"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. 근무일수"
                    android:textSize="15sp"
                    android:textColor="@color/maintext"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안해"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. 근무일정"
                    android:textSize="15sp"
                    android:textColor="@color/maintext"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="으아악"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. 주휴일"
                    android:textSize="15sp"
                    android:textColor="@color/maintext"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20162626"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7. 임금"
                    android:textSize="15sp"
                    android:textColor="@color/maintext"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/employer_contract_write_fin_ch_hour"
                        android:onCheckedChanged="@{employerContractWriteFin.onCheckBoxChecked}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="16dp"
                        android:text="시급제" />

                    <CheckBox
                        android:id="@+id/employer_contract_write_fin_ch_month"
                        android:onCheckedChanged="@{employerContractWriteFin.onCheckBoxChecked}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="16dp"
                        android:text="월급제 또는 연봉제" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/cont_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="24dp"
                        android:textSize="15sp"
                        android:textColor="@color/maintext"
                        android:text="- 시급"/>
                    <TextView
                        android:id="@+id/cont_text1_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cont_text1"
                        android:text="백마넌"/>

                    <TextView
                        android:id="@+id/cont_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cont_text1"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="24dp"
                        android:textSize="15sp"
                        android:textColor="@color/maintext"
                        android:text="- 초과근로 가산임금률" />
                    <TextView
                        android:id="@+id/cont_text3_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cont_text3"
                        android:layout_below="@+id/cont_text1"
                        android:text="50%"/>

                    <TextView
                        android:id="@+id/cont_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cont_text3"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="24dp"
                        android:textSize="15sp"
                        android:textColor="@color/maintext"
                        android:text="- 임금 지급일" />
                    <TextView
                        android:id="@+id/cont_text4_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cont_text4"
                        android:layout_below="@+id/cont_text3"
                        android:text="@string/employer_write_contract_4_wagedate"/>

                    <CheckBox
                        android:id="@+id/employer_contract_write_fin_ch_pay_month"
                        android:onCheckedChanged="@{employerContractWriteFin.onCheckBoxChecked}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cont_text4"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="16dp"
                        android:text="매월" />

                    <EditText
                        android:id="@+id/employer_contract_write_fin_edit_month"
                        android:text="@={employerContractWriteFin.contract_write_fin_edit_month}"
                        android:layout_width="64dp"
                        android:layout_height="28dp"
                        android:background="@drawable/edittext_border"
                        android:layout_toRightOf="@id/employer_contract_write_fin_ch_pay_month"
                        android:layout_below="@id/cont_text4"
                        android:paddingRight="12dp"
                        android:gravity="right|center_vertical"
                        android:hint="일"
                        android:textSize="14sp"/>

                    <CheckBox
                        android:id="@+id/employer_contract_write_fin_ch_pay_day"
                        android:onCheckedChanged="@{employerContractWriteFin.onCheckBoxChecked}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/employer_contract_write_fin_edit_month"
                        android:layout_below="@+id/cont_text4"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="16dp"
                        android:text="매일" />


                    <TextView
                        android:id="@+id/cont_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/employer_contract_write_fin_ch_pay_day"
                        android:layout_marginBottom="14dp"
                        android:textSize="15sp"
                        android:textColor="@color/maintext"
                        android:text="- 임금 지급 방법" />

                    <LinearLayout
                        android:id="@+id/cont_how"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:layout_below="@+id/cont_text5">

                        <CheckBox
                            android:id="@+id/employer_contract_write_fin_ch_pay_how1"
                            android:onCheckedChanged="@{employerContractWriteFin.onCheckBoxChecked}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="직접 지급" />

                        <CheckBox
                            android:id="@+id/employer_contract_write_fin_ch_pay_how2"
                            android:onCheckedChanged="@{employerContractWriteFin.onCheckBoxChecked}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/employer_contract_write_fin_ch_pay_how1"
                            android:layout_weight="1"
                            android:text="예금통장에 입금" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/cont_text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cont_how"
                        android:layout_marginBottom="14dp"
                        android:textSize="15sp"
                        android:textColor="@color/maintext"
                        android:text="8. 사회보험 적용여부 (해당란에 체크)" />

                    <TableLayout
                        android:id="@+id/cont_insur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cont_text6"
                        android:layout_marginBottom="24dp">
                        <TableRow>
                            <CheckBox
                                android:id="@+id/employer_contract_write_fin_ch_insure1"
                                android:onCheckedChanged="@{employerContractWriteFin.onCheckBoxChecked}"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="고용보험" />
                            <CheckBox
                                android:id="@+id/employer_contract_write_fin_ch_insure2"
                                android:onCheckedChanged="@{employerContractWriteFin.onCheckBoxChecked}"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/employer_contract_write_fin_ch_pay_how1"
                                android:layout_weight="1"
                                android:text="산재보험" />
                        </TableRow>
                        <TableRow>
                            <CheckBox
                                android:id="@+id/employer_contract_write_fin_ch_insure3"
                                android:onCheckedChanged="@{employerContractWriteFin.onCheckBoxChecked}"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="국민연금" />
                            <CheckBox
                                android:id="@+id/employer_contract_write_fin_ch_insure4"
                                android:onCheckedChanged="@{employerContractWriteFin.onCheckBoxChecked}"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/employer_contract_write_fin_ch_pay_how1"
                                android:layout_weight="1"
                                android:text="건강보험" />
                        </TableRow>
                    </TableLayout>

                    <TextView
                        android:id="@+id/cont_text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cont_insur"
                        android:layout_marginBottom="14dp"
                        android:textSize="15sp"
                        android:textColor="@color/maintext"
                        android:text="9. 근로계약서 교부" />
                    <TextView
                        android:id="@+id/cont_text7_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cont_text7"
                        android:layout_marginBottom="24dp"
                        android:textSize="14sp"
                        android:text="@string/employer_write_contract_write_fin"/>

                    <TextView
                        android:id="@+id/cont_text8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cont_text7_sub"
                        android:layout_marginBottom="14dp"
                        android:textSize="15sp"
                        android:textColor="@color/maintext"
                        android:text="10. 기타" />

                    <TextView
                        android:id="@+id/cont_text8_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cont_text8"
                        android:textSize="14sp"
                        android:text="@string/employer_write_contract_4_note"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/cont_final_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="몇월 몇일"
                    android:textSize="14sp"
                    android:textColor="@color/maintext"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사업주"
                    android:textSize="15sp"
                    android:textColor="@color/maintext"
                    android:layout_marginTop="18dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_line"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:shrinkColumns="1">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/maintext"
                            android:text="사업체명 :"/>
                        <TextView
                            android:id="@+id/cont_final_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/maintext"
                            android:text="워커스비일"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/maintext"
                            android:text="전        화 :"/>
                        <TextView
                            android:id="@+id/cont_final_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/maintext"
                            android:text="010-1234-5678"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/maintext"
                            android:text="주        소 :"/>
                        <TextView
                            android:id="@+id/cont_final_add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/maintext"
                            android:text="서울역 3번출구 우와ㅏㅏ와아아아아앙워아아아ㅏ어아"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/maintext"
                            android:text="대  표  자 :"/>
                        <TextView
                            android:id="@+id/cont_final_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/maintext"
                            android:text="하성호 대펴님"/>
                    </TableRow>
                </TableLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginBottom="26dp"
                    android:background="@drawable/round_corner"/>

                <Button
                    android:id="@+id/employer_contract_write_fin_btn_send"
                    android:onClick="@{employerContractWriteFin::onBtnClick}"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/background"
                    android:text="근로자에게 전송하기"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>