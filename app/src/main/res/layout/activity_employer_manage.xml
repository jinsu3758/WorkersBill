<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>
        <variable
            name="employerManage"
            type="com.example.jinsu.work2.viewmodel.EmployerViewModel"/>
    </data>
    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/employer_manage_layout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        tools:openDrawer="start"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:padding="6dp"
                android:layout_height="?android:attr/actionBarSize"
                android:visibility="gone"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/white">
                    <Button
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="25dp"
                        android:layout_gravity="left|center"
                        android:background="@drawable/menu"
                        android:id="@+id/employer_manage_btn_drawer"
                        android:onClick="@{employerManage::onBtnClick}"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="근로자 관리"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="25dp"
                        android:layout_gravity="end|center"
                        android:background="@drawable/homeicon"
                        android:id="@+id/employer_manage_btn_home"
                        android:onClick="@{employerManage::onBtnClick}"
                        />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="27dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="31dp"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="요청리스트"
                            android:id="@+id/contract_request_alarm"/>

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="3dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/roundt_textview"
                            android:id="@+id/employer_manage_txt_list_sum"
                            android:text="@{employerManage.employer_manage_list_sum}"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="315dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="9dp"
                        android:layout_gravity="center"
                        android:background="@color/gray2"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="31dp"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:text="사업장에 합류 요청"/>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="3dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/roundt_textview"
                            android:id="@+id/employer_manage_txt_req_sum"
                            android:text="@{employerManage.employer_manage_req_sum}"
                            />
                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:id="@+id/employer_manage_req_recycler"
                        />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="56dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="31dp"
                                android:layout_gravity="center_vertical"
                                android:background="@android:color/transparent"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:text="재직중인 직원"
                                android:id="@+id/contract__alarm"/>

                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="3dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/employer_manage_txt_cur_sum"
                                android:text="@{employerManage.employer_manage_cur_sum}"
                                android:textSize="16sp"
                                android:textColor="@color/colorAccent"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="315dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="9dp"
                            android:layout_gravity="center"
                            android:background="@color/gray2"/>

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:id="@+id/employer_manage_cur_recycler"
                            />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>
        <include
            android:id="@+id/employer_home_drawer"
            layout="@layout/navigation_drawer"/>
    </android.support.v4.widget.DrawerLayout>
</layout>
