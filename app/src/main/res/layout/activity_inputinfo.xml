<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="inputInfo"
            type="com.example.jinsu.work2.viewmodel.MainViewModel"/>
    </data>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/put_data"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_weight="1"
                        android:text="정보입력"
                        android:textAlignment="center"
                        android:textColor="#48cfad" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_weight="1"
                        android:text="전자서명"
                        android:textAlignment="center"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_weight="1"
                        android:text="  완료  "
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_weight="1"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:background="@drawable/slide1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_weight="1"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:background="@drawable/slide2" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_weight="1"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:background="@drawable/slide3" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="17dp"
                    android:gravity="center"
                    android:text="기본정보"
                    android:textColor="@android:color/black"
                    android:textSize="21sp" />


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:id="@+id/inputInfo_im_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:maxHeight="100dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/profile"

                        />

                    <Button
                        android:id="@+id/inputInfo_select_image_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|bottom"
                        android:background="@drawable/camera"
                        android:textSize="10dp"
                        android:onClick="@{inputInfo::onBtnClick}"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:background="@drawable/border"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@color/maincolor"
                        android:gravity="center"
                        android:text="이름"
                        android:textSize="12sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@={inputInfo.inputinfo_edit_name}"
                        android:background="@android:color/white"
                        android:hint="  이름을 입력하시오"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@color/maincolor"
                        android:gravity="center"
                        android:text="휴대폰 번호"
                        android:textSize="12sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:text="@={inputInfo.inputinfo_edit_registerNum}"
                        android:hint="‘-’제외하고 입력"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:background="@drawable/border"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@color/maincolor"
                        android:gravity="center"
                        android:text="주소"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_adress"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:paddingLeft="8dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="@={inputInfo.inputinfo_edit_postcode}"
                        android:hint="  우편번호 찾기"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/inputInfo_address_btn"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:background="@drawable/searchicon"
                        android:onClick="@{inputInfo::onBtnClick}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/border"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <EditText
                        android:id="@+id/et_address_rest"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="8dp"
                        android:text="@={inputInfo.inputinfo_edit_rest_address}"
                        android:background="@android:color/white"
                        android:hint="   주소"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:background="@drawable/border"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <EditText
                        android:id="@+id/et_address_detail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@={inputInfo.inputinfo_address}"
                        android:background="@android:color/white"
                        android:hint="   상세주소"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="30dp"
                    android:layout_marginTop="80dp"
                    android:paddingRight="33dp">

                    <Button
                        android:id="@+id/inputInfo_next_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@android:color/white"
                        android:onClick="@{inputInfo::onBtnClick}"
                        android:text="다음 단계  〉"
                        android:textSize="12dp" />


                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</layout>